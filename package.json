{
  "name": "vite-email",
  "version": "0.7.4",
  "description": "Send emails rendered by Vite and Markdown-It automatically",
  "keywords": [
    "vite",
    "vite-plugin",
    "markdown",
    "email"
  ],
  "homepage": "https://github.com/yjl9903/vite-email#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/vite-email/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/vite-email.git"
  },
  "license": "MIT",
  "author": "XLor",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "vmail": "./vmail.mjs"
  },
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "pnpm build:core && pnpm build:client",
    "build:client": "pnpm -C client build",
    "build:core": "unbuild",
    "dev:example": "pnpm -C example dev",
    "format": "prettier --write client/**/*.{ts,vue} example/*.ts src/**/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "pnpm build"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "cli-progress": "^3.11.1",
    "csv-parse": "^5.1.0",
    "csv-stringify": "^6.1.0",
    "debug": "^4.3.4",
    "kolorist": "^1.5.1",
    "markdown-it": "^13.0.1",
    "markdown-it-title": "^4.0.0",
    "nodemailer": "^6.7.5",
    "prompts": "^2.4.2",
    "sirv": "^2.0.2",
    "ufo": "^0.8.4",
    "vite": "^2.9.10",
    "vite-plugin-singlefile": "0.7.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/debug": "^4.1.7",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.40",
    "@types/nodemailer": "^6.4.4",
    "@types/prompts": "^2.4.0",
    "bumpp": "^7.1.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3",
    "unbuild": "^0.7.4",
    "vite-email": "workspace:*",
    "vitest": "^0.15.1"
  },
  "packageManager": "pnpm@7.1.9"
}
